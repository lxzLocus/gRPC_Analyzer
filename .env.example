# SafeBatchRunner Required Environment Variables
# OpenAI API Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4.1

# Gemini API Configuration
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=gemini-2.5-pro

# LLM Provider Selection
LLM_PROVIDER=openai

# System Configuration
NODE_ENV=development
DEBUG_MODE=false
LOG_LEVEL=info

# File Operation Configuration
MAX_FILE_SIZE=52428800

# Rate Limiting Configuration
API_TIMEOUT=120000
LLM_TIMEOUT=120000

# Rate Limiting Thresholds (Optional Override)
# OpenAI Overrides
# RATE_LIMIT_TPM_OVERRIDE=25000000  # 25M tokens per minute (lower than default)
# RATE_LIMIT_RPM_OVERRIDE=8000      # 8K requests per minute (lower than default)
# RATE_LIMIT_TPD_OVERRIDE=10000000000  # 10B tokens per day (lower than default)

# Gemini Overrides
# GEMINI_RATE_LIMIT_TPM_OVERRIDE=800000    # 800K tokens per minute (conservative)
# GEMINI_RATE_LIMIT_RPM_OVERRIDE=800       # 800 requests per minute (conservative)
# GEMINI_RATE_LIMIT_TPD_OVERRIDE=40000000  # 40M tokens per day (conservative)

FILE_TIMEOUT=30000
BACKUP_ENABLED=true

# Performance Configuration
PERFORMANCE_MONITORING=true
DETAILED_LOGS=true

# API Configuration
API_TIMEOUT=120000
LLM_TIMEOUT=120000
REQUEST_TIMEOUT=120000

# Testing Configuration
MOCK_MODE=false
INTEGRATION_TEST_ENABLED=true
TEST_TIMEOUT=60000

# Security Configuration
VALIDATE_FILE_PATHS=true
RESTRICT_TO_PROJECT_DIR=true
MAX_DEPTH=10

# Path Configuration (override defaults if needed)
# PROMPT_DIR=/custom/prompt/path
# OUTPUT_DIR=/custom/output/path
# LOGS_DIR=/custom/logs/path
# BACKUP_DIR=/custom/backup/path
