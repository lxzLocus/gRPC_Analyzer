# LLMFlowController Environment Configuration
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT=30000

# System Configuration
NODE_ENV=development
DEBUG_MODE=false
LOG_LEVEL=info

# File Operation Configuration
MAX_FILE_SIZE=52428800
FILE_TIMEOUT=30000
BACKUP_ENABLED=true

# Performance Configuration
PERFORMANCE_MONITORING=true
DETAILED_LOGS=true

# Testing Configuration
MOCK_MODE=false
INTEGRATION_TEST_ENABLED=true
TEST_TIMEOUT=60000

# Security Configuration
VALIDATE_FILE_PATHS=true
RESTRICT_TO_PROJECT_DIR=true
MAX_DEPTH=10

# Path Configuration (override defaults if needed)
# PROMPT_DIR=/custom/prompt/path
# OUTPUT_DIR=/custom/output/path
# LOGS_DIR=/custom/logs/path
# BACKUP_DIR=/custom/backup/path
