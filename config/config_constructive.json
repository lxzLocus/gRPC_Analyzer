{
  "system": {
    "version": "1.0.0",
    "environment": "experiment",
    "debugMode": false,
    "logLevel": "info"
  },
  "experimental": {
    "flowMode": "legacy",
    "legacyPromptSet": "0d47361_constructive_criticism",
    "features": {
      "conversationSummarizer": true,
      "crossReferenceAnalyzer": true,
      "finalCheckPhase": true,
      "earlyTerminationPrevention": true
    }
  },
  "llm": {
    "provider": "openai",
    "model": "gpt-4o-mini",
    "maxTokens": 128000,
    "temperature": 0.1,
    "timeout": 120000,
    "retryAttempts": 3,
    "summaryThreshold": 30000,
    "summaryModel": "gpt-4o-mini",
    "summaryTemperature": 0.1
  },
  "openai": {
    "model": "gpt-4o-mini",
    "maxTokens": 16384,
    "temperature": 0.1,
    "timeout": 120000
  },
  "paths": {
    "promptDir": "/app/src/prompts",
    "outputDir": "/app/output",
    "logsDir": "/app/logs",
    "backupDir": "/app/backups"
  }
}
