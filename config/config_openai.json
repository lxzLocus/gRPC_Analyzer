{
  "system": {
    "version": "1.0.0",
    "environment": "production",
    "debugMode": false,
    "logLevel": "info"
  },
  "llm": {
    "provider": "openai",
    "model": "gpt-5",
    "maxTokens": 30000,
    "temperature": 0.1,
    "timeout": 600000,
    "retryAttempts": 3,
    "summaryThreshold": 25000,
    "summaryModel": "gpt-5",
    "summaryTemperature": 0.1,
    "qualityCheck": {
      "enabled": true,
      "requireModifiedContent": true,
      "minModifiedLines": 1
    }
  },
  "fileOperations": {
    "encoding": "utf-8",
    "enableSizeCheck": true,
    "maxFileSize": 52428800,
    "enableTimeoutCheck": true,
    "fileTimeout": 30000,
    "backupEnabled": true
  },
  "performance": {
    "enableMonitoring": true,
    "enableDetailedLogs": true,
    "performanceLogPath": "/app/logs/performance",
    "reportGenerationEnabled": true
  },
  "paths": {
    "promptDir": "/app/src/prompts",
    "outputDir": "/app/output",
    "logsDir": "/app/logs",
    "backupDir": "/app/backups"
  },
  "testing": {
    "mockMode": false,
    "integrationTestEnabled": true,
    "testReportPath": "/app/output",
    "testTimeout": 60000
  },
  "security": {
    "validateFilePaths": true,
    "restrictToProjectDir": true,
    "maxDepth": 10
  }
}
