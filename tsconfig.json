{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "sourceMap": true,
    "outDir": "./dist/js/",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
    //すべてのファイルをモジュールと見なしてくれるため，別のファイルに同じ変数名があっても問題ないと判定される
    //"moduleDetection": "force"
  },
  "exclude": ["**/dataset/*", "**/node_modules/*", "/app/dist/*", "/app/docs/*"]
}
