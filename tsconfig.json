{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2015",
    "sourceMap": true,
    "outDir": "./build/js/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    //すべてのファイルをモジュールと見なしてくれるため，別のファイルに同じ変数名があっても問題ないと判定される
    //"moduleDetection": "force"
    "moduleResolution": "bundler" //or "node16"
  },
  "exclude": ["**/dataset/*", "**/node_modules/*", "/app/build/*"]
}
