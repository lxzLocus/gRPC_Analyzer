{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Docker Debug Python",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Docker Debug JavaScript",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": ["app/**/*.js"],
        },
        {
            "name": "Docker Debug TypeScript",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "Compile TypeScript",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "env": {
                "NODE_ENV": "development",
                "DEBUG_MODE": "true"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Docker Debug go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "env": {},
            "showLog": false,
            "args": ["imports", "/app/dataset/clone/emojivote/pullrequest/01_pr/premerge_112/emojivoto-emoji-svc/api/api_test.go"]
        },
        {
            "name": "Debug LLMFlowBatchRunner",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/modules/llmFlowBatchRunner.ts",
            "cwd": "${workspaceFolder}",
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "env": {
                "NODE_ENV": "development",
                "DEBUG_MODE": "true"
            },
            "envFile": "${workspaceFolder}/.env",
            "runtimeArgs": ["--loader", "ts-node/esm"],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug LLMFlowBatchRunner (Compiled JS)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/js/modules/llmFlowBatchRunner.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "DEBUG_MODE": "true",
                "NODE_OPTIONS": "--max-old-space-size=2048"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "sourceMaps": true
        },
    {
            "name": "Debug MainScript.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/MainScript.js",
            "args": [
                "0", // データセット番号 (0: filtered_fewChanged)
                "/app/output" // 出力ディレクトリ
            ],
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        }
    ]
}
